<html>
	<head>
		<title>VSSUT</title>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
  <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet' type='text/css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.serializeJSON/2.9.0/jquery.serializejson.min.js"></script>
  <script >
    $(function(){
      $("#header").load("header.html");
      $("#footer").load("footer.html");
    });
  </script>
  <script>
      var qr = require('qr-encode')
      var img = new Image();
      var dataURI = qr('hash', {type:6, size : 6, level: 'Q'});
      img.src=dataURI
      document.getElementById("qrcode").appendChild(img)
  </script>
	</head>
<body class="container">
  <div id="header"></div>
  <h1>Blockchain based Certificate Validation</h1>
  <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <ul class="nav navbar-nav">
      <li ><a href="/">Issue Certificate</a></li>
      <li ><a href="/2">Validate</a></li>
    </ul>
  </div>
</nav>
      <fieldset>
        <h1>Verified Certificate!</h1>
        <% if(enroll !== null){ %><h2>Enrollment Number : <%= enroll %></h2><% } %>
        <% if(degree_no !== null){ %><h2>Degree No. : <%= degree_no %></h2><% } %>
        <span id="myDiv"></span>
          <table class="table table-striped">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Parameter</th>
                <th scope="col">Value</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Name</td>
                <td><% if(name !== null){ %><p><%= name %></p><% } %></td>
              </tr>
              <tr>
                <td>Branch</td>
                <td><% if(branch !== null){ %><p><%= branch %></p><% } %></td>
              </tr>
              <tr>
                 <td>CGPA</td>
                <td><% if(cgpa !== null){ %><p><%= cgpa %></p><% } %></td>
              </tr>
              <tr>
                <td>Email</td>
                <td><% if(email !== null){ %><p><%= email %></p><% } %></td>
              </tr>
              <tr>
                <td>Issuer</td>
                <td><% if(issuer !== null){ %><p><%= issuer %></p><% } %></td>
              </tr>
              <tr>
                <td>Pass Out</td>
                <td><% if(datetime !== null){ %><p><%= datetime %></p><% } %></td>
              </tr>
              <tr>
                <td>Public Key</td>
                <td><% if(hash !== null){ %><p><%= hash %></p><% } %></td>
              </tr>
            </tbody>
          </table>
          <div style="width:1100px; height:850px; padding:20px; text-align:center; border: 10px solid #787878">
            <div style="width:1050px; height:800px; padding:20px; text-align:center; border: 5px solid hsl(238, 56%, 57%)">
                  <img class="watermark" src="../images/1200px-Logo_vssut.svg.png"/><br>
                  <span style="font-size:25px; font-weight:bold" >Veer Surendra Sai University of Technology, Burla</span><hr>
                  <span style="font-size:50px; font-weight:bold">Certificate of Graduation</span><span id="qrcode"></span>
                   <br><br>
                   <span style="font-size:25px"><i>This is to certify that</i></span>
                   <br><br>
                   <span style="font-size:30px"><b><%= name %></b></span><br/><br/>
                   <span style="font-size:25px"><i>has completed the course</i></span> <br/><br/>
                   <span style="font-size:30px">B.Tech in <%= branch %></span> <br/><br/>
                   <span style="font-size:20px">with score of <b><%= cgpa %></b></span> <br/><br/><br/><br/>
                   <span style="font-size:25px"><i>on</i></span><br>
                   <span style="font-size:25px"><br><%= datetime %></span><br><br><hr>
                   <span>Please use the public key: <b>"<%= hash %>"</b> to verify authenticity of the certificate at any ethereum validation site</span>
            </div>
            </div>
          <% if(error !== null){ %>
            <p><%= error %></p>
          <% } %>
          <script type="text/javascript">
            // console.log(block);
          </script>

        <form id="myForm" enctype='application/json'>
          <button type="button" onclick="window.location.href='/2'" class="btn btn-primary" onclick="submitform()">Return to Verifier</button>
          </form>
      </fieldset>

<div id="footer"></div>
</body>
<script src="https://cdn.rawgit.com/ethereum/web3.js/develop/dist/web3.js"></script>
<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js"></script>
<script src="editor.js"></script>
</html>
